<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="15dp"
    android:id="@+id/listBackground"
    android:layout_width="350dp"
    android:layout_height="170dp"
    android:background="@drawable/border_layout_investment"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="135dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewCode"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_text_view"
            android:layout_marginLeft="50dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="CODE"
            android:textAlignment="center"
            android:textColor="@color/string_tv"
            android:textSize="12dp"
           />
        <EditText
            android:id="@+id/codeDialog"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="none"
            android:textSize="12dp"
            />

        <Button
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:id="@+id/btnCancelDialog"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:padding="1dp"
            android:backgroundTint="@color/background_btn"
            android:text="Cancel"
            android:textColor="@color/string_btn"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="135dp"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="50dp"
            android:textAlignment="center"
            android:id="@+id/textViewName"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_text_view"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="NAME"
            android:textColor="@color/string_tv"
            android:textSize="12dp"
            />

        <EditText
            android:id="@+id/nameDialog"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="none"
            android:textSize="12dp"
            />

        <Button
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:id="@+id/btnSaveDialog"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:padding="1dp"
            android:backgroundTint="@color/background_btn"
            android:text="@string/btn_save"
            android:textColor="@color/string_btn"
            android:textSize="12dp" />

    </LinearLayout>







</LinearLayout>