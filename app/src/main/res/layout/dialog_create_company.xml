<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listBackground"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/border_layout_investment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.69"
        android:background="@color/string_tv"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_code"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewCode"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_text_view"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:text="CODE"
            android:textSize="13dp"
            android:textAlignment="center"
            android:textColor="@color/string_tv"/>

        <EditText
            android:id="@+id/codeDialog"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:ems="15"
            android:inputType="none"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_text_view"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:text="NAME"
            android:textSize="13dp"
            android:textAlignment="center"
            android:textColor="@color/string_tv"/>

        <EditText
            android:id="@+id/nameDialog"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:ems="15"
            android:inputType="none"
            android:textSize="13dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.6"
        android:background="@color/string_tv"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelDialog"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/background_btn"
            android:padding="1dp"
            android:text="@string/btn_cancel"
            android:textColor="@color/string_btn"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnSaveDialog"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/background_btn"
            android:padding="1dp"
            android:text="@string/btn_save"
            android:textColor="@color/string_btn"
            android:textSize="12dp" />


    </LinearLayout>


</LinearLayout>